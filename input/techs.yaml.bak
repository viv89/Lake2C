---
in_ec_groups: 
  - ec_group: # Solar radiation S and W
      id: sol_group
      ecs:
      - Sol_S
      - Sol_W
  - ec_group: # Wind velocity WPA and WPB 100
      id: wind_group_100
      ecs:
      - Wind_WPA_100
      - Wind_WPB_100
