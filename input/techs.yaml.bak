technology_definitions:
- tech: #SolarThermal_FlatPlateCollectors
    node_class: converter
    component: STC
    type: FPC
    id: STC_FPC
    name: Solar Thermal Flat Plate Collectors
    constraints_efficiency:
      eta_0: 0.693
      a1: 4.39
      a2: 0.018
      abs_coeff: 0.90
      thermal_capacitance: 12.5
      capacity_unit: m2
    constraints_general:
      lifetime_years: 20
      unit_cap_min: 0
      TRL:
        - [2015, 8]
        - [2020, 11]
      last_installation_year: inf
      max_cap_sys: inf 
    constraints_conversion:
      min_out_yearly: 0
      max_out_yearly: inf
      min_load: 0
      max_load: 1
